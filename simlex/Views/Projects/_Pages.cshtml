@model SX.WebCore.ViewModels.SxVMPicture[]
@{
    SX.WebCore.ViewModels.SxVMPicture item;
}

<ul>
    @for (int i = 0; i < Model.Length; i++)
    {
        item = Model[i];
        <li class="project-page">
            <a href="@Url.Action("Picture", "Pictures", new { id=item.Id })" class="project-page__link" style="background-image:url(@Url.Action("Picture", "Pictures", new { id=item.Id, height=200 }))" data-lightbox="project-pages" data-title="@item.Caption"></a>
        </li>
    }
</ul>
