@model simlex.ViewModels.VMMaterial

<div class="rel-mats">
    <h4 class="rel-mats__header">Похожие статьи</h4>
    <ul>
        @for (int i = 0; i < Model.RelatedMaterials.Length; i++)
        {
            var item = Model.RelatedMaterials[i];
            <li>
                <h3 class="rel-mat__title">
                    <a href="@item.GetUrl(Url)" title="@item.Title">@item.Title</a>
                </h3>
                <div class="rel-mat__date">
                    @item.DateOfPublication.ToString("dd MMM, yyyy")
                </div>
            </li>
        }
    </ul>
</div>